{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Inscription</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                    <h4>Informations de connexion</h4>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                        {{ form_errors(form.username) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                    <hr>
                    <h4>Informations de profil</h4>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom' } }) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom' } }) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.adresse, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse' } }) }}
                        {{ form_errors(form.adresse) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.telephone, { 'attr': {'class': 'form-control', 'placeholder': 'Téléphone' } }) }}
                        {{ form_errors(form.telephone) }}
                    </div>
                    <div class="form-group" id="fos_user_registration_form">
                        {{ form_widget(form.webSite, { 'attr': {'class': 'form-control', 'placeholder': 'Site Web' } }) }}
                        {{ form_errors(form.webSite) }}

                        {{ form_rest(form) }}
                    </div>
                    <div>
                        <input id="submitRegister" onclick="" class="btn btn-lg btn-success btn-block" type="submit" value="{{ 'registration.submit'|trans }}">
                        <a href="{{ path('fos_user_security_login') }}" class="btn btn-xs btn-primary btn-block" role="button">Connexion</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>